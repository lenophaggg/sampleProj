@model IEnumerable<diary.Models.PersonContactData>

<table class="table table-striped table-bordered w-100">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ISU ID</th>
            <th scope="col">Имя</th>
            <th scope="col">Должность</th>
            <th scope="col">Фотография</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.UniversityIdContact</td>
                <td>@teacher.NameContact</td>
                <td>@(teacher.Position != null && teacher.Position.Any() ? string.Join(", ", teacher.Position) : "N/A")</td>
                <td>
                    @if (!string.IsNullOrEmpty(teacher.ImgPath))
                    {
                        <img src="@teacher.ImgPath.Replace("big", "small")" alt="Фото @teacher.NameContact" class="img-fluid" style="max-width: 100px; height: auto;" />
                    }
                    else
                    {
                        <span>Нет фотографии</span>
                    }
                </td>
                <td>
                    <a asp-action="TeacherDetails" asp-route-id="@teacher.IdContact" class="btn btn-primary">Подробнее</a>
                </td>
            </tr>
        }
    </tbody>
</table>
